@model IEnumerable<ST10451547_CLOUD_COMPUTING_PART2.Data.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="col-12 table-content" style="padding-top: 35px">
    <div class="row">
        <div class="card card-gray">
            <div class="card-header">
                <h1>Products</h1>
                <div class="project-actions text-left">
                    <a class="editor-create" asp-action="Create"><span class="fa fa-plus mr-3"></span><strong>ADD PRODUCT</strong></a>
                </div>
                <!-- Search Box -->
                <div class="float-right">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                </div>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Supplier)
                            </th>
                            <th>@Html.DisplayName("Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Supplier)
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.ProductId"><img class="table-icon" title="Edit" /></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#example1').DataTable({
                "paging": true,     // Enable pagination
                "searching": true,  // Enable search
                "info": true        // Enable showing table information
            });

            // Event listener for custom search box
            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw(); // Apply search on DataTable
            });
        });
    </script>
}
