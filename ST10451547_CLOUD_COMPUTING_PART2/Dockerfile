#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["ST10451547_CLOUD_COMPUTING_PART2/ST10451547_CLOUD_COMPUTING_PART2.csproj", "ST10451547_CLOUD_COMPUTING_PART2/"]
COPY ["ST10451547_CLOUD_COMPUTING_PART2.BusinessLogic/ST10451547_CLOUD_COMPUTING_PART2.BusinessLogic.csproj", "ST10451547_CLOUD_COMPUTING_PART2.BusinessLogic/"]
COPY ["ST10451547_CLOUD_COMPUTING_PART2.Data/ST10451547_CLOUD_COMPUTING_PART2.Data.csproj", "ST10451547_CLOUD_COMPUTING_PART2.Data/"]
COPY ["ST10451547_CLOUD_COMPUTING_PART2.Common/ST10451547_CLOUD_COMPUTING_PART2.Common.csproj", "ST10451547_CLOUD_COMPUTING_PART2.Common/"]
RUN dotnet restore "./ST10451547_CLOUD_COMPUTING_PART2/ST10451547_CLOUD_COMPUTING_PART2.csproj"
COPY . .
WORKDIR "/src/ST10451547_CLOUD_COMPUTING_PART2"
RUN dotnet build "./ST10451547_CLOUD_COMPUTING_PART2.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./ST10451547_CLOUD_COMPUTING_PART2.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ST10451547_CLOUD_COMPUTING_PART2.dll"]